{
    "$comment" : "JSON Schema for TestSessions test parameters",
    "$comment" : "",
    "$comment" : "Version 1.0, 08/13/2019",
    "$comment" : "",

    "$schema": "http://json-schema.org/draft-06/schema#",
    "id": "https://128technology.com/schemas/Sessions.json#",
    "title": "Sessions",
    "description": "Refine Idle Sesssion Detection",
    "type" : "object",
    "properties" : {
        "max_sessions_to_query" : { "type" : "integer", "minimum" : 1, "default" : 100 },
        "query_filter_strings"  : { "type" : "string" },
        "idle_maximum_seconds"  : { "type" : "integer", "minimum" : 1  },
        "idle_theshold_seconds" : { "type" : "integer", "minimum" : 1 },
        "match_port"            : { "type" : "integer", "minimum" : 1, "maximum" : 65535},
        "exclude_tests" : {
            "type" : "array",
            "items" : {
                "type" : "string"
            }
        },
        "entry_tests" : {
	    "type" : "object",
	    "properties" : {
	        "no_match" : {
                     "type" : "object",
 		     "properties" : {
		         "format" : { "type" : "string" },
		         "status" : { 
			    "type" : "string", 
			    "enum" : [ 
			       "FAIL", 
			       "WARN", 
			       "PASS" 
			  ] 
		      }
                   }
               },
               "defaults" : {
                   "type" : "object",
                   "properties" : {
		       "format" : { "type" : "string" },
		       "status" : { 
		           "type" : "string", 
		           "enum" : [ 
			       "FAIL", 
			       "WARN", 
			       "PASS" 
			   ] 
		       }
                   }
               },
	       "tests" : {
                   "type" : "array",
                   "items" : {
                       "type" : "object",
                       "properties" : {
                            "test" : { "type" : "string" },
		            "format" : { "type" : "string" },
		            "status" : { 
			         "type" : "string", 
			         "enum" : [ 
			             "FAIL", 
			             "WARN", 
			             "PASS" 
			         ]
                            } 
		         }
                     }
                }
            }
        }
    }
}
